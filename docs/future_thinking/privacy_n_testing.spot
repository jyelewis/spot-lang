
module LoadCountAlgo {
    struct LoadCountsResult {
        count: Int,
        longest_run: Int,
        private algo_used: String,
    }

    func load_counts(data: [Int]) -> LoadCountsResult {
        var count = 0
        var longest_run = 0
        var current_run = 1

        for i in 1..<data.len() {
            if data[i] == data[i - 1] {
                current_run += 1
            } else {
                if current_run > longest_run {
                    longest_run = current_run
                }
                current_run = 1
            }
            count += 1
        }

        if current_run > longest_run {
            longest_run = current_run
        }

        return LoadCountsResult { count, longest_run, algo_used: "LoadCountAlgo"
    }
}
